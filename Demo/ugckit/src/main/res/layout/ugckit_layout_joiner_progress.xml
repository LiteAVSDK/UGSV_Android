<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="#000">

    <TextView
        android:id="@+id/joiner_tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@string/ugckit_layout_joiner_progress_video_is_generating"
        android:textColor="#fff"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joiner_tv_msg"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tencent.qcloud.ugckit.component.progressbar.NumberProgressBar
            android:id="@+id/joiner_pb_loading"
            style="@style/UGCKitNumberProgressBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:progress_current="0" />

        <ImageView
            android:id="@+id/joiner_iv_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:padding="5dp"
            android:src="@drawable/ugckit_jointer_btn_cancel" />
    </LinearLayout>

</RelativeLayout>