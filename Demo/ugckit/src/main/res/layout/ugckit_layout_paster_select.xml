<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ugckit_ic_editer_bottom_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_paster_category"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_animated_paster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ugckit_dynamic_paster"
                android:textColor="@color/ugckit_white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_paster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:text="@string/ugckit_static_paster"
                android:textColor="@color/ugckit_white"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/paster_btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ugckit_ic_close_selector" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ugckit_color_gray5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/paster_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>