<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#80000000"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mic_volume"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:text="@string/mic_volume"
            android:textColor="@color/white" />

        <SeekBar
            android:id="@+id/seekbar_mic_volume"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:indeterminate="false"
            android:max="100"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_progress_drawable"
            android:thumb="@drawable/play_seekbar_icon" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/layout_reverb_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/btn_reverb_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectDisabled"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_original_sound"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_reverb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectReverbKTV"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_ktv"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_reverb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectReverbRoom"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_room"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_reverb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectReverbHall"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_hall"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_reverb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectReverbLow"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_deep"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_reverb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectReverbSonorous"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_loud"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_reverb_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectReverbMagnetic"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_magnetic"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/layout_voicechanger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_voicechanger_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectDisabled"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_original_sound2"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_voicechanger_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeBadboy"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_wild_kid"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />


            <TextView
