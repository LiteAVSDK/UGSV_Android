                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeLoli"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_lolita"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_voicechanger_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeUncle"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_uncle"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_voicechanger_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeHeavymechanical"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_heavy_metal"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/btn_voicechanger_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeForeigner"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_foreigner"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/btn_voicechanger_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeBeast"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_beast"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_voicechanger_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeFatty"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_fat_boy"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_voicechanger_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeElectric"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_heavy_current"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_voicechanger_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeHeavymechanical"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_heavy_machine"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_voicechanger_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:drawableTop="?attr/audioEffectVoicechangeEthereal"
                android:focusable="false"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/layout_sound_effect_vacant"
                android:textAllCaps="false"
                android:textColor="@drawable/text_color1"
                android:textSize="12dp" />
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_volume"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_ugc_soundeffect"
            android:text="音量"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_voicechange"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:text="变声"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_reverb"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:text="混响"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>

