<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ugckit_color_primary</item>
        <item name="colorPrimaryDark">@color/ugckit_black</item>
        <item name="colorAccent">@color/ugckit_color_accent</item>
        <item name="android:windowBackground">@color/ugckit_color_activity_background</item>
        <item name="android:listDivider">@drawable/ugckit_shape_list_divider</item>
    </style>

    <!-- Login and register Activity theme. -->
    <style name="UGCKitBaseWhiteTransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ugckit_color_primary</item>
        <item name="colorPrimaryDark">@color/ugckit_black</item>
        <item name="colorAccent">@color/ugckit_color_primary</item>
        <item name="colorControlNormal">@color/ugckit_color_transparent_gray</item>
        <item name="android:textColorHint">@color/ugckit_color_transparent_gray</item>
        <item name="colorControlActivated">@color/ugckit_color_primary</item>
        <item name="colorControlHighlight">@color/ugckit_color_primary</item>
        <item name="android:windowBackground">@color/ugckit_color_dark_transparent_gray</item>
    </style>

    <style name="UGCKitRecordActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/ugckit_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/ugckit_transparent</item>
    </style>

    <style name="UGCKitNormalDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="UGCKitConfirmDialogStyle" parent="UGCKitNormalDialog"></style>

    <style name="UGCKitDialogFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="UGCKitNumberProgressBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#fff</item>
        <item name="progress_reached_color">@color/ugckit_color_red2</item>

        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/ugckit_color_red2</item>

        <item name="progress_reached_bar_height">1.5dp</item>
        <item name="progress_unreached_bar_height">0.75dp</item>
    </style>

    <style name="UGCKitCustomEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/ugckit_color_gray4</item>
        <item name="colorControlActivated">@color/ugckit_color_accent</item>
    </style>

    <style name="UGCKitActionSheetDialogStyle" parent="android:Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
